{
    "manifest_version": 3,
    "name": "ChatGPT Usage Tracker",
    "version": "1.0",
    "permissions": [
      "storage", 
      "activeTab", 
      "tabs",
      "history"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  